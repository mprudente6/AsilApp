<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ParametriMediciFragment">
    <!-- Measurements -->
    <RelativeLayout
        android:id="@+id/measurementsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <!-- First Row: Body Temperature -->
        <LinearLayout
            android:id="@+id/temperatureLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/temperatureButton"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperatura"
                android:drawableLeft="@drawable/temperature_icon"
                android:minWidth="240dp"
                android:minHeight="72dp"
                android:backgroundTint="#FF03A9F4" />

            <ProgressBar
                android:id="@+id/temperatureProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/temperatureResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Second Row: Heart Rate -->
        <LinearLayout
            android:id="@+id/heartRateLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperatureLayout"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/heartRateButton"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/frequenza_cardiaca"
                android:drawableLeft="@drawable/heart_rate_icon"
                android:minWidth="240dp"
                android:minHeight="72dp"
                android:backgroundTint="#FF03A9F4" />

            <ProgressBar
                android:id="@+id/heartRateProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/heartRateResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Third Row: Blood Pressure -->
        <LinearLayout
            android:id="@+id/bloodPressureLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/heartRateLayout"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/bloodPressureButton"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pressione"
                android:drawableLeft="@drawable/blood_pressure_icon"
                android:minWidth="240dp"
                android:minHeight="72dp"
                android:backgroundTint="#FF03A9F4" />

            <ProgressBar
                android:id="@+id/bloodPressureProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/bloodPressureResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Fourth Row: Pulse Ox -->
        <LinearLayout
            android:id="@+id/pulseOxLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bloodPressureLayout"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pulseOxButton"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saturazione"
                android:drawableLeft="@drawable/pulse_ox_icon"
                android:minWidth="240dp"
                android:minHeight="72dp"
                android:backgroundTint="#FF03A9F4" />

            <ProgressBar
                android:id="@+id/pulseOxProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/pulseOxResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Fifth Row: Glucose -->
        <LinearLayout
            android:id="@+id/glucoseLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pulseOxLayout"
            android:visibility="gone">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/glucoseButton"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/glicemia"
                android:drawableLeft="@drawable/glucose_icon"
                android:minWidth="240dp"
                android:minHeight="72dp"
                android:backgroundTint="#FF03A9F4" />

            <ProgressBar
                android:id="@+id/glucoseProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/glucoseResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/glucoseLayout"
            android:text="@string/salva"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:visibility="gone"

            android:backgroundTint="#FF076AEC" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/apriContenitore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            app:cardCornerRadius="25dp"
android:layout_marginTop="230dp"

            app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF076AEC"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="1dp">


            <TextView
                android:layout_width="163dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:text="@string/apri_contenitore"
                android:textAlignment="center"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/btnSchedaUser"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:padding="8dp"

                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/first_aid_kit_p24" />
        </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>
</ScrollView>