<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParametriMediciFragment">
    <!-- Measurements -->
    <RelativeLayout
        android:id="@+id/measurementsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <!-- First Row: Body Temperature -->
        <LinearLayout
            android:id="@+id/temperatureLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <Button
                android:id="@+id/temperatureButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperatura"
                android:drawableLeft="@drawable/temperature_icon"
                android:minWidth="224dp"
                android:minHeight="64dp" />

            <ProgressBar
                android:id="@+id/temperatureProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/temperatureResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Second Row: Heart Rate -->
        <LinearLayout
            android:id="@+id/heartRateLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/temperatureLayout"
            android:visibility="gone">

            <Button
                android:id="@+id/heartRateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frequenza cardiaca"
                android:drawableLeft="@drawable/heart_rate_icon"
                android:minWidth="224dp"
                android:minHeight="64dp" />

            <ProgressBar
                android:id="@+id/heartRateProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/heartRateResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Third Row: Blood Pressure -->
        <LinearLayout
            android:id="@+id/bloodPressureLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/heartRateLayout"
            android:visibility="gone">

            <Button
                android:id="@+id/bloodPressureButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pressione"
                android:drawableLeft="@drawable/blood_pressure_icon"
                android:minWidth="224dp"
                android:minHeight="64dp" />

            <ProgressBar
                android:id="@+id/bloodPressureProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/bloodPressureResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Fourth Row: Pulse Ox -->
        <LinearLayout
            android:id="@+id/pulseOxLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bloodPressureLayout"
            android:visibility="gone">

            <Button
                android:id="@+id/pulseOxButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saturazione"
                android:drawableLeft="@drawable/pulse_ox_icon"
                android:minWidth="224dp"
                android:minHeight="64dp" />

            <ProgressBar
                android:id="@+id/pulseOxProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/pulseOxResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Fifth Row: Glucose -->
        <LinearLayout
            android:id="@+id/glucoseLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pulseOxLayout"
            android:visibility="gone">

            <Button
                android:id="@+id/glucoseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glicemia"
                android:drawableLeft="@drawable/glucose_icon"
                android:minWidth="224dp"
                android:minHeight="64dp" />

            <ProgressBar
                android:id="@+id/glucoseProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/glucoseResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:visibility="gone"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <!-- Sixth Row: Save Button -->
        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/glucoseLayout"
            android:text="SALVA"

            app:icon="@android:drawable/ic_menu_save"
            android:padding="12dp"
            android:layout_marginTop="40dp"
            app:cornerRadius="22dp"
            android:visibility="gone"
            android:background="#FF076AEC" />

        <Button
            android:id="@+id/apriContenitore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/saveButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="213dp"
            android:textSize="18sp"
            android:backgroundTint="#FF076AEC"
            android:minWidth="224dp"
            android:minHeight="64dp"
            android:text="Apri contenitore" />


    </RelativeLayout>
</ScrollView>