<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">






        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fe9e50"
            app:title="AsilApp"
            app:titleTextColor="#FFFFFF" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-9dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/signupText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/SignUp"
                android:fontFamily="@font/poor_story"
                android:layout_marginTop="80dp"
                android:textAlignment="center"
                android:textColor="#504F4F"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingBottom="5dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="30dp"
                android:text="@string/Nome"
                android:textSize="16dp"
                android:textStyle="bold" />
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="0dp"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/personIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/user1" />

                <EditText
                    android:id="@+id/nome"
                    android:layout_width="220dp"
                    android:layout_height="55dp"
                    android:drawablePadding="8dp"
                    android:inputType="textEmailAddress"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textCognome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="21dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="5dp"
                android:text="@string/Cognome"
                android:textSize="16dp"
                android:textStyle="bold" />
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="0dp"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cognomIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/user1" />

                <EditText
                    android:id="@+id/cognome"
                    android:layout_width="220dp"
                    android:layout_height="55dp"
                    android:drawablePadding="8dp"
                    android:inputType="textEmailAddress"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/textGenere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="21dp"
                android:layout_marginTop="8dp"
                android:paddingBottom="5dp"
                android:text="@string/Genere"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="274dp"
                android:layout_height="56dp"



                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/genderIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/gender" />

                <Spinner
                    android:id="@+id/spinner_genere"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
                    android:layout_width="220dp"
                    android:layout_height="55dp"
                    android:layout_gravity="start|left"
                    android:layout_marginLeft="20sp"
                    android:layout_marginEnd="20sp"

                    android:layout_marginRight="20sp"
                    android:layout_marginBottom="20sp"
                    android:entries="@array/gender_options"
                    android:outlineAmbientShadowColor="#076AEC"
                    android:prompt="@string/genere_prompt"
                    android:textSize="16sp"
                    app:boxStrokeColor="#076AEC" />
            </LinearLayout>




            <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:paddingBottom="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginStart="21dp"
                android:text="@string/email"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="0dp"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/emailIcon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/email" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="220dp"
                    android:layout_height="55dp"
                    android:drawablePadding="8dp"
                    android:inputType="textEmailAddress"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="21dp"
                android:layout_marginTop="8dp"
                android:text="@string/password"
                android:textSize="16dp"
                android:paddingBottom="5dp"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="0dp"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/passwordIcon2"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/password" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="220dp"
                    android:layout_height="55dp"
                    android:drawablePadding="8dp"
                    android:inputType="textPassword"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/textCell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="21dp"
                android:layout_marginTop="8dp"
                android:text="@string/Cellulare"
                android:paddingBottom="5dp"
                android:textSize="16dp"
                android:textStyle="bold" />


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="0dp"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cellIcon"
                    android:layout_width="49dp"
                    android:layout_height="49dp"
                    android:src="@drawable/phone" />

                <EditText
                    android:id="@+id/cell"
                    android:layout_width="220dp"
                    android:layout_height="55dp"
                    android:drawablePadding="8dp"
                    android:inputType="phone"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/textNascita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="21dp"
                android:layout_marginTop="8dp"
                android:text="@string/Data_di_nascita"
                android:textSize="16dp"
                android:paddingBottom="5dp"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"



                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/calnedarIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/calendar" />
                <EditText
                    android:id="@+id/dataNascita"
                    android:layout_width="220dp"
                    android:layout_height="45dp"
                    android:drawablePadding="10dp"
                    android:hint="gg/mm/aaaa"
                    android:inputType="datetime"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>
            <TextView
                android:id="@+id/textLuogoN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="21dp"

                android:layout_marginTop="8dp"
                android:text="@string/Luogo_nascita"
                android:textSize="16dp"
                android:paddingBottom="5dp"
                android:textStyle="bold" />

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="0dp"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/placeIcon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/place" />

                <EditText
                    android:id="@+id/luogoNascita"
                    android:layout_width="220dp"
                    android:layout_height="55dp"
                    android:drawablePadding="8dp"
                    android:inputType="textEmailAddress"
                    android:padding="8dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>




            <Button
                android:id="@+id/confirm_registration"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:backgroundTint="#076AEC"
                android:text="@string/Conferma"
                android:textSize="15sp"
                app:cornerRadius="20dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="gone" />




        </LinearLayout>


    </RelativeLayout>
</ScrollView>
