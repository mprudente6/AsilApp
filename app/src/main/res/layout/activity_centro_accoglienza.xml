<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#fe9e50"
            app:title="AsilApp"
            app:titleTextColor="#FFFFFF"
            />


        <TextView
            android:id="@+id/textDescr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="634dp"
            android:padding="20dp"
            android:text="@string/Descrizione"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lastL"
            android:layout_width="426dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"


            android:layout_centerInParent="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="647dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal"
            android:padding="35dp">

            <TextView
                android:id="@+id/Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:padding="7dp"
                android:textSize="15dp" />


        </LinearLayout>

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="295dp"
            android:padding="20dp"
            android:text="E-mail"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="518dp"
            android:padding="20dp"
            android:text="Telefono"
            android:textSize="16dp"
            android:textStyle="bold" />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"


            android:layout_centerInParent="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="533dp"
            android:layout_marginEnd="-2dp"
            android:orientation="horizontal"
            android:padding="35dp">

            <ImageView
                android:id="@+id/imageTel"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/phone_icon" />

            <TextView
                android:id="@+id/Tel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:autoLink="phone"
                android:linksClickable="true" />


        </LinearLayout>

        <TextView
            android:id="@+id/textLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="407dp"
            android:padding="20dp"
            android:text="Sito web"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout

            android:layout_width="455dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"


            android:layout_centerInParent="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="421dp"
            android:layout_marginEnd="-1dp"
            android:orientation="horizontal"
            android:padding="35dp">

            <ImageView
                android:id="@+id/imageLink"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:src="@drawable/web_icon" />

            <TextView
                android:id="@+id/Link"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:autoLink="web"
                android:linksClickable="true" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="410dp"
            android:layout_height="128dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"


            android:layout_centerInParent="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="312dp"
            android:layout_marginEnd="0dp"
            android:orientation="horizontal"
            android:padding="35dp">

            <ImageView
                android:id="@+id/imageEmail"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/email_icon" />

            <TextView
                android:id="@+id/Email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:autoLink="email"
                android:linksClickable="true" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="455dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"


            android:layout_centerInParent="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="198dp"
            android:orientation="horizontal"
            android:padding="35dp">

            <ImageView
                android:id="@+id/imageAddress"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/place_icon1" />

            <TextView
                android:id="@+id/Indirizzo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="1" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"

            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:padding="20dp"
            android:text="Nome"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textIndirizzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="180dp"
            android:padding="20dp"
            android:text="Indirizzo"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout

            android:layout_width="455dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="4dp"
            android:layout_marginTop="-47dp"
            android:orientation="horizontal"
            android:padding="35dp">

            <ImageView
                android:id="@+id/imageHome"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/home" />

            <TextView
                android:id="@+id/Nome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_weight="1" />



        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lastL"
            android:layout_marginTop="-48dp"
            android:layout_weight="1"

            android:padding="15dp"></androidx.recyclerview.widget.RecyclerView>


    </RelativeLayout>

</ScrollView>